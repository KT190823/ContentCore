// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "."
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Status {
  ACTIVE
  INACTIVE
}

enum GenerateStatus {
  SUCCESS
  FAILED
}

enum PricingHistoryStatus {
  SUCCESS
  FAILED
  EXPIRED
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  status        Status    @default(ACTIVE)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Subscription & Credits
  pricingPlanId String?   @db.ObjectId
  credit        Int       @default(0)
  creditUsed    Int       @default(0)
  capacity      Int       @default(0) // Storage capacity in MB
  capacityUsed  Int       @default(0) // Storage used in MB
  lastResetDate DateTime?

  accounts        Account[]
  sessions        Session[]
  posts           Post[]
  channels        Channel[]
  keywords        Keyword[]
  refreshTokens   RefreshToken[]
  pricingHistory  PricingPlanHistory[]
  generateHistory GenerateHistory[]
  facebookPosts   FacebookPost[]

  pricingPlan PricingPlan? @relation(fields: [pricingPlanId], references: [id])
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  status            Status  @default(ACTIVE)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  status       Status   @default(ACTIVE)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime
  status     Status   @default(ACTIVE)

  @@unique([identifier, token])
}

model Channel {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  userId       String    @db.ObjectId
  platform     String // 'youtube', 'tiktok', 'instagram'
  channelId    String
  channelName  String
  channelImage String?
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?
  status       Status    @default(ACTIVE)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform, channelId])
}

enum PostStatus {
  draft
  scheduled
  processing
  published
}

enum VideoType {
  video
  shorts
}

model Post {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  userId        String     @db.ObjectId
  title         String
  description   String?
  thumbnailUrl  String?
  videoUrl      String?
  videoType     VideoType? @default(video)
  processStatus PostStatus @default(draft)
  status        Status     @default(ACTIVE)
  scheduledAt   DateTime?
  publishedAt   DateTime?
  views         Int        @default(0)
  likes         Int        @default(0)
  comments      Int        @default(0)
  tags          String[] // Array of tags/keywords
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FacebookPost {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  userId         String     @db.ObjectId
  title          String
  content        String?
  imageUrl       String?
  videoUrl       String?
  status         PostStatus @default(draft)
  scheduledAt    DateTime?
  publishedAt    DateTime?
  facebookPostId String? // ID from Facebook after publishing
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TrendingVideo {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  videoId      String   @unique
  title        String
  channelName  String
  channelId    String?
  thumbnailUrl String
  views        String // Changed from BigInt to String for MongoDB compatibility
  publishedAt  DateTime
  category     String?
  tags         String[]
  status       Status   @default(ACTIVE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Keyword {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  keyword   String
  category  String?
  volume    Int? // Search volume
  trend     String? // 'rising', 'stable', 'declining'
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, keyword])
}

model RefreshToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String   @db.ObjectId
  expiresAt DateTime
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model PricingPlan {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  name         String // free, pro, ultra
  price        Int // Stored in VND
  currency     String       @default("VND")
  billingCycle BillingCycle @default(MONTHLY)
  credit       Int          @default(0) // Credits provided by this plan
  capacity     Int          @default(0) // Storage capacity in MB
  features     String[]
  description  String?
  status       Status       @default(ACTIVE)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  users     User[]
  histories PricingPlanHistory[]

  @@unique([name, billingCycle])
}

model PricingPlanHistory {
  id            String               @id @default(auto()) @map("_id") @db.ObjectId
  userId        String               @db.ObjectId
  planId        String               @db.ObjectId
  price         Int // Price at the time of subscription
  currency      String               @default("VND")
  status        PricingHistoryStatus @default(SUCCESS)
  errorMessage  String?
  startDate     DateTime             @default(now())
  endDate       DateTime? // Keeps consistency with previous field
  expireAt      DateTime?
  paymentMethod String?
  transactionId String?
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt

  user User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan PricingPlan @relation(fields: [planId], references: [id])

  @@index([userId])
  @@index([planId])
}

model GenerateHistory {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  userId       String         @db.ObjectId
  input        String
  output       String
  credit       Int // Credit used for this generation
  status       GenerateStatus @default(SUCCESS)
  errorMessage String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
